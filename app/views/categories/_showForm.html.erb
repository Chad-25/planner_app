<section class="section-category-details">
  <% if @category.description.present? %>
    <div class="category-details-description">
      <label>Description: </label>
      <span><%= @category.description %></span>
    </div>
  <% end %>
<div class="category-details-buttons">
  <button class="category-details-edit-button">
    <%= link_to 'Edit', edit_category_path(@category) %>
  </button>
  <%= button_to "Delete", @category, class: "category-details-remove-button", method: :delete,
      data: { confirm: "Are you sure you want to delete this category?" } %>
</div>

</section>
